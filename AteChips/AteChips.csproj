<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<RollForward>Major</RollForward>
		<PublishReadyToRun>false</PublishReadyToRun>
		<TieredCompilation>false</TieredCompilation>
		<NoWarn>IDE0130</NoWarn>
	</PropertyGroup>
	<PropertyGroup>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Nullable>enable</Nullable>
	</PropertyGroup>


	<PropertyGroup Condition="'$(OS)' == 'Windows_NT'">
		<DefineConstants>$(DefineConstants);WINDOWS;NOT_OSX;NOT_TUX</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(RuntimeIdentifier)' != '' and '$(RuntimeIdentifier)' &gt;= 'osx' and '$(RuntimeIdentifier)' &lt; 'osx~' ">
		<DefineConstants>$(DefineConstants);OSX;NOT_WINDOWS;NOT_TUX</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(RuntimeIdentifier)' != '' and '$(RuntimeIdentifier)' &gt;= 'linux' and '$(RuntimeIdentifier)' &lt; 'linux~' ">
		<DefineConstants>$(DefineConstants);LINUX;NOT_WINDOWS;NOT_OSX</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="ImGui.NET" Version="1.91.6.1" />
		<PackageReference Include="OpenTK" Version="4.9.4" />
	</ItemGroup>
	<ItemGroup>
		<Folder Include="Host\Audio\" />
		<Folder Include="Host\Input\" />
		<Folder Include="Shared\Utilities\" />
	</ItemGroup>

</Project>